<div class="content">

    <div class="module">
        <div class="module-head">
            <h3>User: {{name}}</h3>
        </div>
        <div class="module-body">
            <form class="form-horizontal row-fluid" method="POST"
                action="/users/editProfile/{{_id}}">
                <div class="control-group">
                    <label class="control-label" for="basicinput">Name</label>
                    <div class="controls">
                        <input type="text" id="codeproduct" placeholder="Input code..." class="span8" name="name"
                            autofocus value="{{name}}" required>
                    </div>
                </div>

                <div class="control-group">
                    <label class="control-label" for="basicinput">Address</label>
                    <div class="controls">
                        <input type="text" placeholder="Input name address..." class="span8" name="address"
                            value="{{address}}" required>
                    </div>
                </div>

                <div class="control-group">
                    <label class="control-label" for="basicinput">Email</label>
                    <div class="controls">
                        <input type="email" placeholder="Input name email..." class="span8" name="email"
                            value="{{email}}" required>
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="basicinput">Phone</label>
                    <div class="controls">
                        <input type="number" placeholder="Input name phone..." class="span8" name ="phone" value="{{phone}}" required>
                    </div>
                </div>


                <div class="control-group">
                    <label class="control-label" for="basicinput">Roles</label>
                    <div class="controls">
                        <div class="input-append">
                            <input type="text" placeholder="Input name roles..." class="span8" name="roles" value="{{roles}}"
                                required>
                        </div>
                    </div>
                </div>

                <div class="control-group">
                    <div class="controls">
                        <button type="submit" class="btn btn-large btn-success">Edit my profile</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<!--/.content-->