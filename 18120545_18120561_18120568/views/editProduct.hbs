<div class="content">

    <div class="module">
        <div class="module-head">
            <h3>Edit a product</h3>
        </div>
        <div class="module-body">
            <form class="form-horizontal row-fluid" method="POST" enctype="multipart/form-data" action="/products/edit/{{_id}}">
                <div class="control-group">
                    <label class="control-label" for="basicinput">Code</label>
                    <div class="controls">
                        <input type="text" id="codeproduct" placeholder="Input code..." class="span8" name="code" autofocus value="{{code}}" required>
                    </div>
                </div>

                <div class="control-group">
                    <label class="control-label" for="basicinput">Name</label>
                    <div class="controls">
                        <input type="text" id="nameproduct" placeholder="Input name..." class="span8" name="name" value="{{name}}" required>
                    </div>
                </div>

                <div class="control-group">
                    <label class="control-label" for="basicinput">Producer</label>
                    <div class="controls">
                        <input type="text" id="nameproducer" placeholder="Input name producer..." class="span8" name ="producer" value="{{producer}}" required>
                    </div>
                </div>

                <div class="control-group">
                    <label class="control-label" for="basicinput">Category</label>
                    <div class="controls">
                        <select tabindex="1" data-placeholder="Select" class="span8" name = "category">
                            <option value="PC" selected>{{category}}</option>
                            {{#each listCategoty}}
                                <option value="{{name}}">{{name}}</option>
                            {{/each}}
                        </select>
                    </div>
                </div>

                <div class="control-group">
					<label class="control-label" for="basicinput">Price</label>
					<div class="controls">
						<div class="input-append">
							<input type="text" placeholder="1.000.000đ" class="span8" name = "price" value="{{price}}" required><span class="add-on">VNĐ</span>
						</div>
					</div>
				</div>
                <div class="control-group">
					<label class="control-label" for="basicinput">Old Price</label>
					<div class="controls">
						<div class="input-append">
							<input type="text" placeholder="1.000.000d" class="span8" name = "oldPrice" value="{{oldPrice}}" required><span class="add-on">VNĐ</span>
						</div>
					</div>
				</div>

